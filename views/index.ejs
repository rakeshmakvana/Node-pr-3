<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Volunteer App</title>

    <!-- icon css -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

    <!-- bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- custom css -->
    <link rel="stylesheet" href="css/style.css" />
</head>

<body>

    <div class="pb-4">
        <div class="formbg"></div>
        <div class="formbox">
            <div class="formcard">
                <div class="formcontent">
                    <form method="post" action="/addVolunter">
                        <div class="row">
                            <div class="input-field col s12 my-2">
                                <h4>Volunteer Registration Form</h4>
                                <p>Please complete all required fields*</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input name="name" type="text" placeholder="Full Name" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input name="email" type="email" placeholder="Email Address" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input name="phone" type="number" placeholder="Phone Number" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input name="work" type="text" placeholder="Your Work" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input name="experience" type="text" placeholder="Your Experience" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <textarea name="summary" class="materialize-textarea" placeholder="Summary"
                                    required></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col m6 s12">
                                <button type="submit" class="waves-effect waves-light btn-large">
                                    Submit
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="container my-5">
        <h4>Volunteer Information</h4>
        <div class="divider"></div>
        <table class="highlight">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Email Address</th>
                    <th>Phone Number</th>
                    <th>Work</th>
                    <th>Experience</th>
                    <th>Summary</th>
                    <th>Menu</th>
                </tr>
            </thead>
            <tbody>
                <% volunters.forEach(volunter=> { %>
                    <tr>
                        <td>
                            <%= volunter.id %>
                        </td>
                        <td>
                            <%= volunter.name %>
                        </td>
                        <td>
                            <%= volunter.email %>
                        </td>
                        <td>
                            <%= volunter.phone %>
                        </td>
                        <td>
                            <%= volunter.work %>
                        </td>
                        <td>
                            <%= volunter.experience %>
                        </td>
                        <td>
                            <%= volunter.summary %>
                        </td>
                        <td>
                            <a href="/editVolunter/<%= volunter.id %>" class="btn waves-effect waves-light">Update</a>
                            <a href="/deleteVolunter/<%= volunter.id %>"
                                class="btn waves-effect red waves-light">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

</body>

</html>